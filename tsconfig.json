{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "commonjs", 
    "lib": ["esnext", "dom"], 
    "allowJs": true, 
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "resolveJsonModule": true, 
    "jsx": "react-jsx"
  },
  "include": [
    "client/**/*.ts",
    "client/**/*.tsx",
    "server/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
